									<<set _soldierHunt += (Math.round($dragons[_i].soldierexp * _goldbonus) + random(15,30))>>
								<</if>>

							<<case default>>

								
						<</switch>>

					<</for>>

					<<set _firstPass = false>>
					<<run console.log(_firstPass)>>
					<<run console.log("post-Pass " + $home)>>
					
				<<else>>
					<<set $food += (_food> + _soldierHunt)>
					<<set $water += _water>>
					<<set $stone += _stone>>
					<<set $wood += _wood>>
					<<for _i to 0; _i < $dragons.length; _i++>>
						/* Feeding based on current job, + if they are housed or not. */
