										<<set $dragons[_i].thirst = 0>>
										<<set _drink += 5>>
									<<else>>
										<<set $dragons[_i].thirst += 1>>
										<<set _thirsty += 5>>
										<<set _nowater += 1>>
									<</if>>
								<</if>>

							<<case "rainier">>
								<<if $dragons[_i].home !== "none">>
									<<if $food >= (_eat + 3)>>
										<<set $dragons[_i].hunger = 0>>
										<<set _eat += 3>>
									<<else>>
